@using Tasks.Service.PlanWeek.Dto
@using Tasks.ViewModels.PlanWeek
@model PlanWeekViewModel

<!--Days-->
@foreach (DayPlanDto day in Model.weekPlanDto.DayPlans)
{
<div class="plan-pane-middle-day">
    <table class="table table-striped table-hover ">
        <tbody>

            @foreach (DayPlanItemDto item in day.Items)
            {
                <tr data-taskid="@item.Id">
                    <td> @item.Id </td>
                    <td> @item.Description </td>
                    <td> @item.Type </td>
                </tr>
            }

        </tbody>
    </table>
</div>
}

