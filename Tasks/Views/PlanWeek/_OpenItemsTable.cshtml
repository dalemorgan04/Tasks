@using Tasks.Service.PlanWeek.Dto
@using Tasks.ViewModels.PlanWeek
@model PlanWeekViewModel

<!--Days-->

<div class="heading">
    <h1> Open Items </h1>
</div>

<div class="plan">
    <div class="card">
        <div class="list">
            @foreach (var day in Model.OpenItemsListDto.openItems)
            {
                <div>
                    <h1>@day.Key.ToString()</h1>
                    <table>
                        <tbody id=@day.Key class="connectedSortable">

                            <tr class="emptyTablePlaceholder"></tr>

                            @foreach (ItemDto item in day.Value.ItemDtos)
                            {
                                <tr data-taskid="@item.Id">
                                    <td>
                                        @item.Description
                                        <input type="checkbox" />
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>