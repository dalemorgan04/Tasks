@using Tasks.Infrastructure.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Task Tunnel</title>
    @Styles.Render("~/Content/css")
</head>
<body>

@Html.Partial("_Header")

<div class="wrapper">
    
    <!-- Sidebar -->
    @Html.Partial("_Menu")
    
    <!-- Page Content -->
    <div id="content">
        @RenderBody()
    </div>

</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/core")
@Html.ViewJavascriptResource()
@RenderSection("scripts", false)
</body>
</html>
