@using Tasks.Service.Projects.Dto
@using Tasks.ViewModels.Projects
@model ProjectsViewModel

@foreach (ProjectDto project in Model.Projects)
{
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
                
                <h1> @project.Id - @project.Description </h1>

                <table class="table table-striped table-hover ">
                    <tbody>  
                        @foreach (ProjectItemDto item in project.Items)
                        {
                            <tr data-projectid=@item.Id>
                                <td>@item.Id</td>
                                <td>@item.Type</td>
                                <td>@item.Description</td>                                
                            </tr>
                        }                        
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}