@model Tasks.ViewModels.Tasks.TaskEditViewModel

<div class="modal" id="addTaskModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add a task</h4>
            </div>
            <div class="modal-body">
            
                @using (Html.BeginForm("Create", "Thoughts", FormMethod.Post, new { id = "addTaskForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                    
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", PlaceHolder = "Task description" })
                        
                        <label>Priority</label>
                        @Html.TextBoxFor(model => model.PriorityId, new { @class = "form-control"})
                        
                        <label>Timeframe</label>
                        <label>Window:</label>
                        @Html.LabelFor(model => model.TimeFrameId, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.TimeFrameId, new { @class = "form-control"})
                    
                        @Html.LabelFor(model => model.DateTime, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.DateTime, new { @class = "form-control", PlaceHolder = "Date due" })
                    
                    </div>
                }
            
            </div>
            <div class="modal-footer">
                <button id="btnAddTask" type="submit" value="Create" class="btn btn-default">Add</button>
            </div>
        </div>
    </div>
</div>

