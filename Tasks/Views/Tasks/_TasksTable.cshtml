@using Tasks.Service.Tasks.Dto
@model Tasks.ViewModels.Tasks.TasksViewModel

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-body">

            <table class="table table-striped table-hover ">
                <tbody id="thoughtResultsTableBody">
                @foreach (TaskDto task in Model.TaskList)
                {
                    <tr data-thoughtid="@task.Id">
                        <td>@task.Id</td>
                        <td>@task.Description</td>
                        <td>@task.TimeFrame.Window</td>
                        <td>@task.TimeFrame.Due</td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>