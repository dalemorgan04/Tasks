@using Tasks.Service.Tasks.Dto
@model Tasks.ViewModels.Tasks.TasksViewModel

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-body">

            <table class="table table-striped table-hover ">
                <tr>
                    <th>@Model.TaskList.FirstOrDefault().Id.ToString()</th>
                    <th>@Model.TaskList.FirstOrDefault().Description</th>
                    <th>@Model.TaskList.FirstOrDefault().Due.Date.ToString()</th>
                    <th>@Model.TaskList.FirstOrDefault().Due.WeekCommencing.ToString()</th>
                    <th>@Model.TaskList.FirstOrDefault().Due.Month.ToString()</th>
                    <th>@Model.TaskList.FirstOrDefault().Due.Year.ToString()</th>
                </tr>
                <tbody id="thoughtResultsTableBody">
                @foreach (TaskDto task in Model.TaskList)
                {
                    <tr data-thoughtid="@task.Id">
                        <td>@task.Id</td>
                        <td>@task.Description</td>
                        <td>@task.Due.Date.ToString()</td>
                        <td>@task.Due.WeekCommencing.ToString()</td>
                        <td>@task.Due.Month.ToString()</td>
                        <td>@task.Due.Year.ToString()</td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>